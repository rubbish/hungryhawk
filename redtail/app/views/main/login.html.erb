<div>
<%= '<font color="red">'+@auth_error+'</font><hr />' if @auth_error %>
<% form_tag(:action => 'login') do %>
  <p>Login: <%= text_field_tag :login, params[:login] %></p>
  <p>Password: <%= password_field_tag :password, params[:password] %></p>
  <p><%= submit_tag "log in" %></p>
<% end %>
</div>