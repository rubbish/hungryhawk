<h1>Please make a reservation</h1>

<% form_for(@reservation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :restaurant %><br />
    <%= collection_select("restaurant", "id", Restaurant.find(:all), "id", "name_on_date") %>
  </p>
  <p>
    <%= f.label :lunch_period %>
    <ul>
    First <%= f.radio_button :lunch_period, :one %>
    Second <%= f.radio_button :lunch_period, :two %>
    Third <%= f.radio_button :lunch_period, :three %>
    </ul>
  </p>
  <p>
    <%= f.label :take_out %>
    <ul>
    Yes <%= f.radio_button :take_out, :yes %>
    No <%= f.radio_button :take_out, :no %>
    </ul>
  </p>
  <p>
    <%= f.label :special_request %><br />
    <%= f.text_area :special_request %>
  </p>
  <p>
    <%= f.submit "Make Reservation" %>
  </p>
<% end %>

<%= link_to 'Back', reservations_url %>
