<h2>Please make a reservation</h2>

<% form_for(@reservation) do |f| %>
  <p class="error">
    <%= f.error_messages %>
  </p>

  <p>
    <%= f.label :restaurant %>
    <%= collection_select("restaurant", "id", Restaurant.find(:all), "id", "name_on_date") %>
  </p>
  <p>
    <%= f.label :lunch_period %>
    <%= collection_select("lunch_period", "id", LunchPeriod.find(:all, :order => :period), "id", "to_s") %>
  </p>
  <p>
    <%= f.label :take_out %>
    <ul>
    <li>Yes <%= f.radio_button :take_out, :yes %></li>
    <li>No <%= f.radio_button :take_out, :no %></li>
    </ul>
  </p>
  <p>
    <%= f.label :special_request %><br />
    <%= f.text_area :special_request, :size => '40x4'%>
  </p>
  <p>
    <%= f.submit "Make Reservation" %>
  </p>
<% end %>

<%= link_to 'Back', reservations_url %>
