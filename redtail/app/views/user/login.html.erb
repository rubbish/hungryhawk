<fieldset>
<legend>Please Log In</legend>

<div>
<%= '<font color="red">'+@auth_error+'</font><hr />' if @auth_error %>
<% form_tag(:action => 'login') do %>
  <p>
	<%= label :email, :email %>
	<%= text_field_tag :email, params[:email] %>
  </p>
  <p>
	<%= label :password, :password %>
	<%= password_field_tag :password, params[:password] %>
  </p>
  <p>
    <%= submit_tag "log in" %>
  </p>
<% end %>
</div>
</fieldset>